{
    "compounds": [
        {
            "name": "Python: Django + Livereload",
            "configurations": ["Python: Django", "Livereload"]
        }
    ],
    "version": "0.2.0",
    "configurations": [
    
        {
            "name": "Python: Django",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": ["runserver"],
            "django": true
        },
        {
            "name": "Livereload",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": ["livereload"]
        }
    ]
}